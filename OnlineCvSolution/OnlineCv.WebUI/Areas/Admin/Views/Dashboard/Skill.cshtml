@model IEnumerable<OnlineCv.WebUI.Models.Entity.Skill>
@{
    Layout = null;
}
<!--  Skills -->
<div class="col-sm-6">
    <input type="hidden" id="c2" name="skillId" />
    <select id="11" class="selectpicker">
    <option disabled selected value>Select Skill</option>
        @foreach (var item in Model)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select> <br /> <br />
    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModal1">
        Add Custom Skill to Dropdown 
    </button>

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script>
    $("#11").change(function () {
        var selected = $(this).children("option:selected").val();
        $("#c2").val(selected);
    });
</script>

