@model IEnumerable<OnlineCv.WebUI.Models.Entity.Bio>
@{ 
    Layout = null;
}
<!-- Skills -->
<h5 class="tittle">Skills</h5>

<!-- Sound Engineering -->
<div class="panel-group accordion padding-20" id="accordion">
    @foreach (var item in Model)
    {
        <div class="panel panel-default">
            <div class="row">
                <div class="col-sm-4">
                    <!-- PANEL HEADING -->
                    <div class="panel-heading">
                        <h4 class="panel-title"> <a data-toggle="collapse" data-parent="#accordion" href="#@item.Id" class="collapsed"> @item.Skill.Name</a> </h4>
                    </div>
                </div>

                <!-- Skillls Bars -->
                <div class="col-sm-8">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: @item.SkillLevel%;"> <span class="sr-only">60% Complete</span> </div>
                    </div>

                    <!-- Skillls Text -->
                    <div id="@item.Id" class="panel-collapse collapse">
                        <div class="panel-body">
                            <p>@item.SkillDescription</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>
